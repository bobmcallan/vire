# Vire Configuration
#
# API keys are loaded from environment variables:
#   EODHD_API_KEY, GEMINI_API_KEY
# Navexa API key is per-user (stored in InternalStore, set via PUT /api/users/{id})

[storage]

[storage.internal]
path = "data/internal"

[storage.user]
path = "data/user"

[storage.market]
path = "data/market"

[logging]
level = "info"
format = "json"
outputs = ["console", "file"]
file_path = "logs/vire.log"

[clients.eodhd]
base_url = "https://eodhd.com/api"
rate_limit = 10
timeout = "30s"

[clients.navexa]
base_url = "https://api.navexa.com.au"
rate_limit = 5
timeout = "30s"

[clients.gemini]
model = "gemini-2.0-flash"
max_urls = 20
max_content_size = "34MB"
