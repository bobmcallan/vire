{
  "mcpServers": {
    "vire": {
      "command": "docker",
      "args": [
        "run", "--rm", "-i", "--pull", "always",
        "-v", "vire-desktop-data:/app/data",
        "-e", "EODHD_API_KEY",
        "-e", "NAVEXA_API_KEY",
        "-e", "GEMINI_API_KEY",
        "ghcr.io/bobmcallan/vire-mcp:latest",
        "--stdio"
      ]
    }
  }
}
